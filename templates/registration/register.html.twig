{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .register-container {
        width: 300px;
        margin: 40px auto;
        border: 5px solid #00236b;
        border-radius: 30px;
        padding: 20px;
        background-color: #eef4ff;
    }

    .inscription h2 {
        border-bottom: 2px solid #89b0ff; 
        padding-bottom: 15px;
    }

    .register-container h2 {
        font-size: 16px;
    }

    .register-container label {
        display: block;
        margin-top: 20px;
        margin-bottom:5px;
    }

    .register-container input[type="text"],
    .register-container input[type="email"],
    .register-container input[type="password"] {
        width: 90%;
 
        border: 1px solid #00236b;
        border-radius: 5px;
        min-height: 2em;
    }

    .btn-submit, .btn-login {
        display: inline-block;
        background-color: #89b0ff;
        color: #fff;
        padding: 8px 12px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        border: none;
        margin-top: 15px;
    }

    .btn-submit:hover, .btn-login:hover {
        background-color: #00236b;
    }

    .connexion {
        margin-top: 30px;
        border-top:2px solid #89b0ff;

    }
    .connexion h2 {
        margin-top: 20px;
        margin-bottom: 0px; 
    }
</style>

<div class="register-container">
<div class="inscription">
    <h2>S'inscrire</h2>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name, { 'label': "Nom d'utilisateur :" }) }}
        {{ form_row(registrationForm.email, { 'label': 'Adresse mail :' }) }}
        {{ form_row(registrationForm.address, { 'label': 'Adresse de livraison :' }) }}
        {{ form_row(registrationForm.plainPassword, { 'label': 'Mot de passe :' }) }}
        {{ form_row(registrationForm.confirmPassword, { 'label': 'Confirmer le mot de passe :' }) }}


        <button type="submit" class="btn-submit">Créer un compte</button>
    {{ form_end(registrationForm) }}
</div>
    <div class="connexion">
    <h2>Déjà inscrit ?</h2>
    <a href="{{ path('app_login') }}" class="btn-login">Se Connecter</a>
    </div>

</div>
{% endblock %}
