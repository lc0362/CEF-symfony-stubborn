{% extends 'base.html.twig' %}

{% block title %}Stubborn | Don't compromise on your look {% endblock %}

{% block body %}
<style>
    .products {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .product {
        border: 2px solid #00236b;
        border-radius: 10px;
        padding: 15px;
        background-color: #fff;
        width: 250px;
    }

    .product img {
        width: 100%;
        height: auto;
        border-radius: 5px;
        padding-bottom: 15px;
    }

    .product-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-text {
        display: flex;
        flex-direction: column;
    }

    .product h3 {
        margin-top: 10px;
        font-size: 18px;
        color: #00236b;
        font-weight: bold;
        
    }

  

    .product p {
        font-size: 16px;
        margin-top: 5px;
    }



    /* Responsive à partir de 600px */
    @media (min-width: 600px) {
        .products {
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
        }

        .product {
            width: 280px;
        }
    }
</style>

<section class="products">
    {% for product in products %}
        <div class="product">
            <img src="{{ asset(product.img) }}" alt="{{ product.name }}">

            {% if app.user %}
                <div class="product-content">
                    <div class="product-text">
                        <h3>{{ product.name }}</h3>
                        <p>{{ product.price }} €</p>
                    </div>
                    <a href="{{ path('product_show', { id: product.id }) }}" class="btn-view">Voir</a>
                </div>
            {% else %}
                <h3>{{ product.name }}</h3>
                <p>{{ product.price }} €</p>
            {% endif %}
        </div>
    {% endfor %}
</section>
{% endblock %}
