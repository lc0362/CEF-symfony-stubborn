<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Stubborn{% endblock %}</title>
    <link rel="icon" type="image/jpeg" href="{{ asset('img/favicon-stubborn.png') }}">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color:#eef4ff;
            color:#00091d;
            cursor:default;
        }
        input {
            color:#00091d;
        }
        .header {
            padding: 20px;
            border-bottom: 2px solid #00236b;
        }
        .container-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 20px;
            text-align: center;
        }
        .logo div {
            font-size: 5px;
            text-transform: uppercase;
            letter-spacing: -1.5px;
        }
        .logo img {
            max-width: 200px;
        }
        
        .nav-links {
            margin-top: 20px;
        }

        .nav-links a {
            display: inline-block;
            margin: 8px 10px;
            text-decoration: none;
        }
        
        .nav-links a:hover, 
        .nav-links a.active {
            text-decoration: underline;
            font-weight: bold;
        }

        .logout {
            padding-left: 1em;
            margin-left: auto;
            
        }

        .footer {
            text-align: left;
            padding: 10px;
            border-top: 2px solid #00236b;
            margin-top: 20px;
        }

        @media screen and (min-width: 600px) {
            .container-header {
                flex-direction: row;
                justify-content: space-between;
                align-items: flex-start; 
            }

            .nav-links {
                display: flex;
                flex-direction: row;
                align-items: flex-start;
                margin-top: 0;
                flex-wrap: wrap;
                justify-content: flex-end;
            }

            .nav-links a {
                margin: 0 10px;
            }

            .logo {
                text-align: right;
            }
            .logout {
                padding-left: 10em;      
                padding-top: 10px;  
                text-align: right; 
            }
            
        }
         @media screen and (min-width: 700px) {
            .logout {
            padding-left: 2em;
            margin-left: auto;
            padding-top: 0px; 
            }
         }

        /* Style du bouton Back To Top */
        #backToTop {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background-color: #89b0ff;
            color: #eef4ff;
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 24px;
            cursor: pointer;
            display: none; /* Caché par défaut */
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s, opacity 0.3s;
            z-index: 100;
        }

        #backToTop:hover {
            background-color: #00236b;
        }
        .breadcrumb {
            font-size: 16px;
            margin: 20px 0;
            color: #00236b;
            margin: 40px;
        }

        .breadcrumb a {
            color: #00236b;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .breadcrumb span {
            font-weight: bold;
        }
    </style>
</head>

<body>

<header class="header">
    <div class="container-header">
        <div class="logo">
            <a href="{{ path('homepage') }}"><img src="{{ asset('img/logo-stubborn.png') }}" alt="Stubborn" style="height: 100px;"></a>
            <div style="font-size: 12px;">Don't compromise on your look</div>
        </div>
        <nav class="nav-links">
        {% if app.user %}
            {% if 'ROLE_CUSTOMER' in app.user.roles %}
                <a href="{{ path('homepage') }}" class="{% if app.request.attributes.get('_route') == 'homepage' %}active{% endif %}">Accueil</a>
                <a href="{{ path('products_list') }}" class="{% if app.request.attributes.get('_route') == 'products_list' %}active{% endif %}">Boutique</a>
                <a href="{{ path('cart_show') }}" class="{% if app.request.attributes.get('_route') == 'cart_show' %}active{% endif %}">Panier</a>
                <a href="{{ path('app_logout') }}" class="logout">Se déconnecter</a>
            {% elseif 'ROLE_ADMIN' in app.user.roles %}
                <a href="{{ path('products_list') }}" class="{% if app.request.attributes.get('_route') == 'products_list' %}active{% endif %}">Boutique</a>
                <a href="{{ path('app_logout') }}" class="logout">Se déconnecter</a>
            {% else %}
                <a href="{{ path('homepage') }}" class="{% if app.request.attributes.get('_route') == 'homepage' %}active{% endif %}">Accueil</a>
                <a href="{{ path('app_logout') }}" class="logout">Se déconnecter</a>
            {% endif %}
        {% else %}
            <a href="{{ path('homepage') }}" class="{% if app.request.attributes.get('_route') == 'homepage' %}active{% endif %}">Accueil</a>
            <a href="{{ path('app_register') }}" class="{% if app.request.attributes.get('_route') == 'app_register' %}active{% endif %}">S'inscrire</a>
            <a href="{{ path('app_login') }}" class="{% if app.request.attributes.get('_route') == 'app_login' %}active{% endif %}">Se connecter</a>
        {% endif %}
        </nav>
    </div>
</header>

<main>
    {% block body %}{% endblock %}
</main>

<footer class="footer">
    <div class="footer-content">
        <p><strong>Stubborn</strong> | Piccadilly Circus, London W1J 0DA, Royaume-Uni | <a href="mailto:stubborn@blabla.com">stubborn@blabla.com</a></p>
    </div>
</footer>

<!-- backToTop Button -->
<button id="backToTop" title="Retour en haut">⬆</button>

<script>
// Afficher le bouton backToTop à 200px de scroll
window.addEventListener("scroll", function() {
    const backToTop = document.getElementById("backToTop");
    if (window.scrollY > 200) {
        backToTop.style.display = "flex";
    } else {
        backToTop.style.display = "none";
    }
});

document.getElementById("backToTop").addEventListener("click", function() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
});
</script>

</body>
</html>
