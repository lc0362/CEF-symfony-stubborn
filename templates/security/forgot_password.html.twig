{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<style>
    .forgot-container {
        width: 300px;
        margin: 40px auto;
        border: 5px solid #00236b;
        border-radius: 30px;
        padding: 20px;
        background-color: #eef4ff;
    }

    .forgot-container h1 {
        font-size: 16px;
        border-bottom: 2px solid #89b0ff;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .forgot-container label {
        display: block;
        margin-top: 20px;
        margin-bottom: 5px;
    }

    .forgot-container input[type="email"] {
        width: 90%;
        border: 1px solid #00236b;
        border-radius: 5px;
        min-height: 2em;
        padding: 5px;
    }

    .btn-submit {
        display: inline-block;
        background-color: #89b0ff;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        border: none;
        margin-top: 15px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
    }

    .btn-submit:hover {
        background-color: #00236b;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="forgot-container">
    {% for flash_success in app.flashes('success') %}
        <div class="alert-success">{{ flash_success }}</div>
    {% endfor %}

    {% for flash_error in app.flashes('danger') %}
        <div class="alert-danger">{{ flash_error }}</div>
    {% endfor %}

    <h1>Mot de passe oublié</h1>
    <form method="post">
        <label for="email">Adresse e-mail :</label>
        <input type="email" id="email" name="email" required autocomplete="email">

        <button class="btn-submit" type="submit">Réinitialiser</button>
    </form>
</div>
{% endblock %}
