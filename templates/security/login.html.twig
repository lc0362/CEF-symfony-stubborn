{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<style>
    .login-container {
        width: 300px;
        margin: 40px auto;
        border: 5px solid #00236b;
        border-radius: 30px;
        padding: 20px;
        background-color: #eef4ff;
    }

    .login-container h1, .login-container h2 {
        font-size: 16px;
        border-bottom: 2px solid #89b0ff;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .login-container label {
        display: block;
        margin-top: 20px;
        margin-bottom: 5px;
    }

    .login-container input[type="text"],
    .login-container input[type="password"] {
        width: 90%;
        border: 1px solid #00236b;
        border-radius: 5px;
        min-height: 2em;
        padding: 5px;
    }

    .forgot-password {
        display: block;
        margin-top: 10px;
        color: #a855f7;
        text-decoration: underline;
        font-weight: normal;
    }

    .forgot-password:hover {
        font-weight: bold;
    }

    .section-register {
        margin-top: 30px;
        border-top: 2px solid #89b0ff;
        padding-top: 15px;
    }

    .section-register h2 {
        border-bottom: none;
        padding-bottom: 1px;
        margin-top: 0px;
        margin-bottom: 0px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #d0090a;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        border: 1px solid #f5c6cb;
    }

    .logout-message {
        margin-bottom: 15px;
        color: #333;
    }

    .logout-link:hover {
        font-weight: bold;
    }

</style>

<div class="login-container">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="logout-message">
            Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>. 
            <a href="{{ path('app_logout') }}" class="logout-link">Se déconnecter</a>
        </div>
    {% endif %}

    <h1>Se connecter</h1>
    <form method="post" action="{{ path('app_login') }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <label>Nom d'utilisateur :</label>
        <input type="text" name="_username" value="{{ last_username }}" required>

        <label>Mot de passe :</label>
        <input type="password" name="password" required>

        <button type="submit">Se connecter</button>
    </form>

    <div class="section-register">
        <h2>Pas encore inscrit ?</h2>
        <a href="{{ path('app_register') }}" class="btn-register">Créer un compte</a>
    </div>
</div>
{% endblock %}
