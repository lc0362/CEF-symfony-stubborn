{% extends 'base.html.twig' %}

{% block title %}Stubborn | Boutique en ligne{% endblock %}

{% block body %}
<style>
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.products-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.block {
    width: 462px;
}

.filter {
    border-radius: 10px;
    padding: 15px;
    background-color: #eef4ff;
    text-align: center;
    border: 2px solid #00236b;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.filter h3 {
    margin-bottom: 15px;
}

.filter form button {
    font-size: 16px;
    padding: 10px 20px;
    background-color: #89b0ff;
    color: #fff;
    border: none;
    cursor: pointer;
    border-radius: 20px;
    margin-bottom: 10px;
    margin: 5px 15px 5px;
    transition: background-color 0.3s, opacity 0.3s;
}

.filter form button:hover {
    background-color: #00236b;
}

.reset-link {
    display: inline-block;
    color: #00236b;
    margin-top: 15px;
    cursor: pointer;
    text-decoration: underline;
}

.reset-link:hover {
    font-style: italic;
}

.product {
    border: 2px solid #00236b;
    border-radius: 10px;
    padding: 15px;
    background-color: #fff;
    box-sizing: border-box;
    max-width:386px;
}

.product img {
    width: 100%;
    height: auto;
    border-radius: 5px;
    padding-bottom: 15px;
}

.product-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.product-text {
    display: flex;
    flex-direction: column;
}

.product h3 {
    margin-top: 10px;
    font-size: 18px;
    color: #00236b;
    font-weight: bold;
}

.product p {
    font-size: 16px;
    margin-top: 5px;
}



/* À partir de 655px => 2 blocs par ligne */
@media (min-width: 655px) {
    .block {
        flex: 1 1 45%;
        width: 280px;
    }
    .filter {
        max-width:387px;
    }
    .filter form button {
        padding: 20px 50px;
    }
}

/* À partir de 900px => 3 blocs par ligne */
@media (min-width: 900px) {
    .block {
        flex: 1 1 30%;
        width: 280px;
    }
}
</style>

<nav class="breadcrumb">
    <a href="{{ path('homepage') }}">Accueil</a> &gt; <span>Boutique</span>
</nav>

<div class="container">
    <div class="products-wrapper">

        <div class="block">
            <div class="filter">
                <h3>Fourchette de prix</h3>
                <form method="get" action="{{ path('products_list') }}">
                    <button type="submit" name="filter" value="10-29">10 à 29 €</button>
                    <button type="submit" name="filter" value="30-35">30 à 35 €</button>
                    <button type="submit" name="filter" value="35-50">35 à 50 €</button>
                </form>

                {% if app.request.query.get('filter') %}
                    <a href="{{ path('products_list') }}" class="reset-link">Réinitialiser les filtres</a>
                {% endif %}
            </div>
        </div>

        {% for product in products %}
            <div class="block">
                <div class="product">
                    <img src="{{ asset(product.img) }}" alt="{{ product.name }}">
                    <div class="product-content">
                        <div class="product-text">
                            <h3>{{ product.name }}</h3>
                            <p>{{ product.price }} €</p>
                        </div>
                        <a href="{{ path('product_show', { id: product.id }) }}" class="btn-view">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

{% endblock %}
